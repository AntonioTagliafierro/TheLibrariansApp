<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemon_cream"
    tools:context=".activity.HomeActivity">

    <!-- Titolo della pagina -->
    <TextView
        android:id="@+id/homeTitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Home"
        android:textColor="@color/navy"
        android:textSize="@dimen/title_dimen"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/icon_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_app" />

    <!-- Icona dell'app -->
    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Titolo immagine (BookHub) -->
    <ImageView
        android:id="@+id/BookHub"
        android:layout_width="152dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:paddingTop="5dp"
        android:src="@drawable/title"
        app:layout_constraintStart_toEndOf="@+id/homeTitolo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Guideline per dividere la ScrollView dai pulsanti inferiori -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="80dp" /> <!-- Imposta qui la distanza dai pulsanti -->

    <!-- ScrollView contenente il contenuto -->
    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_cont_top"
        android:backgroundTint="@color/navy"
        app:layout_constraintTop_toBottomOf="@+id/icon_app"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/booksRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="16dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cercaBtn" />

            <!-- Altri elementi del contenuto -->
            <Button
                android:id="@+id/cercaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                android:text="Cerca"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/filterBtn" />

            <EditText
                android:id="@+id/cercaEditText"
                android:layout_width="256dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Cerca"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/genereSpinner"
                android:layout_width="211dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="11dp"
                android:visibility="gone"
                android:entries="@array/generi"
                android:prompt="@string/seleziona_genere_prompt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cercaEditText" />

            <Button
                android:id="@+id/filterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="filtri"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Pulsanti di navigazione inferiori -->
    <include
        layout="@layout/bottom_buttons_layout"
        android:id="@+id/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
